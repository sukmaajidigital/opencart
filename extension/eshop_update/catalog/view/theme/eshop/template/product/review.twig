{% if reviews %}
<div class="product-reviews">
{% for review in reviews %}
<div class="single-review">
  <div class="review-heading">
    <div><i class="fa fa-user-circle-o"></i> <strong>{{ review.author }}</strong></div>
    <div><i class="fa fa-clock-o"></i>{{ review.date_added }}</div>
    <div class="review-rating pull-right">
      {% for i in 1..5 %}
      {% if review.rating < i %} <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span> {% else %} <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span> {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="review-body">
    <p>{{ review.text }}</p>
  </div>
</div>
{% endfor %}
<hr>
<ul class="reviews-pages">
  {{ pagination }}<br>
  {{ results }}
</ul>
</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %}
